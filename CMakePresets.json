        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded",
        "CMAKE_CXX_FLAGS_RELEASE": "/O2 /MT /DNDEBUG",
        "CMAKE_CXX_FLAGS": "/W4 /WX /EHsc"
      }
    },
    {
      "name": "windows-clang-debug",
      "displayName": "Windows Clang-CL Debug (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_FLAGS_DEBUG": "/Zi /MTd /Od /Ob0 /DDEBUG",
        "CMAKE_CXX_FLAGS": "/W4 /WX /EHsc",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug"
      }
    },
    {
      "name": "windows-clang-develop",
      "displayName": "Windows Clang-CL Develop (Ninja)",
