{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug",
        "CMAKE_CXX_FLAGS_DEBUG": "/Zi /MTd /Od /Ob0 /DDEBUG",
        "CMAKE_CXX_FLAGS": "/W4 /WX /EHsc"
      }
    },
    {
      "name": "windows-msvc-develop",
      "displayName": "Windows MSVC Develop (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded",
        "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "/O2 /Zi /MT /DDEVELOP",
        "CMAKE_CXX_FLAGS": "/W4 /WX /EHsc"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Windows MSVC Release (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
